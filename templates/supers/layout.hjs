<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title></title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{#css}}
    <link rel="stylesheet" href="/css/{{.}}.css">
  {{/css}}
</head>
<body id="{{template}}">
  <div class="sticky-footer-wrapper">
    <header class="header">
      <div class="container">
        <div class="brand">
          <a class="ilk-logo" href="/"></a>
          <h1>{{$brand}}<a href="/">ilk</a>{{/brand}}</h1>
        </div>

        <nav class="navigation">
          <ul class="tabs">
            {{$navigation}}{{/navigation}}
          </ul>
        </nav>

        {{#currentUser}}
        <div class="user-links user-links-logged-in">
          <a href="#">{{email}}</a>
        </div>
        {{/currentUser}}

        {{^currentUser}}
          <div class="user-links user-links-logged-out">
            <a class="btn btn-primary" href="/signup">Sign up</a>
            <a class="btn" href="/login">Log in</a>
          </div>
        {{/currentUser}}
      </div>
    </header>

    <div class="container container-main">
      {{>supers/_flash_messages}}
      {{$content}}{{/content}}
    </div>
  </div>

  <footer>
    <div class="container container-footer"></div>
  </footer>
  {{#js}}
    <script type="text/javascript" src="/js/{{.}}.js"></script>
  {{/js}}
  {{>layouts/_google_analytics}}
</body>
</html>
