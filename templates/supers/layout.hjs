<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title></title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{#css}}
  <link rel="stylesheet" href="/css/{{.}}.css">
  {{/css}}
</head>
<body id="{{template}}">
  <div class="sticky-footer-wrapper">
    <header class="navbar navbar-static-top navbar-header">
      <div class="navbar-inner">
        <div class="container">
          {{$brand}}<a class="brand" href="/">ilk</a>{{/brand}}
          {{$navigation}}{{/navigation}}

          {{#currentUser}}
            <ul class="nav nav-account">
              <li class="dropdown">
                <a class="dropdown-toggle" href="#"
                data-toggle="dropdown">{{email}}<b class="caret"></b></a>

                <ul class="dropdown-menu">
                  <li class="divider"></li>
                  <li><a href="/logout">Log Out</a></li>
                </ul>
              </li>
            </ul>
          {{/currentUser}}

          {{^currentUser}}
            <div class="header-actions">
              <a class="btn btn-primary" href="/signup">Sign up</a>
              <a class="btn" href="/login">Log in</a>
            </div>
          {{/currentUser}}
          </ul>
        </div>
      </div>
    </header>

    <div class="container container-main">
      {{>supers/_flash_messages}}
      {{$content}}{{/content}}
    </div>
  </div>

  <footer>
    <div class="container container-footer"></div>
  </footer>
  {{#js}}
  <script type="text/javascript" src="/js/{{.}}.js"></script>
  {{/js}}
  {{>layouts/_google_analytics}}
</body>
</html>
