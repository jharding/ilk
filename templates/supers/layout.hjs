<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title></title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{#css}}
  <link rel="stylesheet" href="/css/{{.}}.css">
  {{/css}}
</head>
<body id="template-{{template}}">
  <div class="sticky-footer-wrapper">
    <header class="navbar navbar-static-top navbar-header">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">Ilk</a>
          <ul class="nav nav-user">
            {{#current_user}}
            <li class="dropdown">
              <a class="dropdown-toggle link-user" href="#"
              data-toggle="dropdown">{{email}}<b class="caret"></b></a>

              <ul class="dropdown-menu">
                <li class="divider"></li>
                <li><a href="/logout">Log Out</a></li>
              </ul>
            </li>
            {{/current_user}}
            {{^current_user}}
              <li>
                <a class="link-user" href="/signup">sign up</a>
                <a class="link-user" href="/login">log in</a>
              </li>
            {{/current_user}}
          </ul>
        </div>
      </div>
    </header>

    <div class="container container-main">
      {{>supers/_flash_messages}}
      {{$content}}{{/content}}
    </div>
  </div>

  <footer>
    <div class="container container-footer"></div>
  </footer>
  {{#js}}
  <script type="text/javascript" src="/js/{{.}}.js"></script>
  {{/js}}
  {{>layouts/_google_analytics}}
</body>
</html>
